<% layout("/layouts/boilerplate") %> 
   <link rel="stylesheet" href="/css/style.css">
    <div id="filters">
        <div class="filter" onclick="window.location.href='/listings'">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=rooms'">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=cityscape'">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=pools'">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing pools</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=camping'">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=farms'">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=arctic'">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=lakes'">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Lakes</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=luxury'">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p>Luxury</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=beach'">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>
        <div class="filter" onclick="window.location.href='/listings?category=towers'">
            <div><i class="fa-solid fa-tower-observation"></i></div>
            <p>Towers</p>
        </div>
        <div class="tax-toggle d-none d-lg-block">
        <div class="form-check-reverse form-switch">
           <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
           <label class="form-check-label" for="switchCheckDefault">Display total after  taxes</label>
        </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="col">
                <div class="card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height:20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-location"><%= listing.location %></p>
                        <p class="card-country"><%= listing.country %></p>
                        <p class="card-text">
                            <b><%= listing.title%> <br/> </b>
                            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : '0' %> /night
                        <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </div>
     </a>
 <% } %>
</div>
       
<script>
    let taxSwitch = document.getElementById("switchCheckDefault")
    taxSwitch.addEventListener("click",() =>{
     let taxInfo= document.getElementsByClassName("tax-info");
     for(info of taxInfo){
        if(info.style.display != "inline"){
            info.style.display="inline";
        }else{
             info.style.display="none";
        }
       
     }
    });
</script>